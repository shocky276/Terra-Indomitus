deity_hu_sky_hu = {
	# 天神
	trigger = {
		religion = hu_religions
	}
	icon = deity_chinese_war
	passive_modifier = {
		army_maintenance_cost = deity_army_maintenance_cost_svalue
	}
	omen = {
		discipline = omen_discipline_svalue
	}	#Bonus from Omen
	on_activate = {
		military_apotheosis_manpower_effect = yes
	}
	religion = hu_religions
	deity_category = war
	deification_trigger = {
		can_deify_trigger = yes
	}
}

